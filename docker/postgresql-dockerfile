# Obraz postgresql - podczas uruchamiania wykonywane sa skrypty inicjujace baze
# budowanie: (trzeba znajdowac sie w katalogu, w ktorym znajduje sie ten plik)
#   docker build -f postgresql-dockerfile --rm -t epidemic .
# uruchamianie: (trzeba znajdowac sie w katalogu glownym repozytorium) 
#   docker run --name epidemicsrv -p 5432:5432 -v "$PWD/db":/scripts -d epidemic


FROM mdillon/postgis:9.3

MAINTAINER arkadiusz.lewandowski@mail.com

WORKDIR /
RUN mkdir scripts

COPY postgresql/10-initdb.sh /docker-entrypoint-initdb.d/

VOLUME /scripts

ENV POSTGRES_PASSWORD pass

EXPOSE 5432
